<!-- The Modal -->
<div id="myModal" class="modal fixed inset-0 bg-black bg-opacity-50 hidden z-50 overflow-auto">
  <div class="modal-content bg-white w-full max-w-2xl mx-auto mt-20 rounded-lg shadow-lg p-6 relative">
    <span class="close absolute top-3 right-5 text-2xl font-bold text-gray-400 hover:text-black cursor-pointer"
      >&times;</span
    >

    <div class="container">
      {% form 'contact' %}
        {{ form.errors | default_errors }}
        {{ form.posted_successfully? }}

        <h2 class="text-xl font-semibold mb-6 text-gray-800">Installer Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <input
              type="text"
              name="contact[name]"
              id="name"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary"
              required
            >
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input
              type="email"
              name="contact[email]"
              id="email"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary"
              required
            >
          </div>

          <div>
            <label for="contact" class="block text-sm font-medium text-gray-700">Contact</label>
            <input
              type="tel"
              name="contact[phone]"
              id="contact"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary"
              required
            >
          </div>

          <div>
            <label for="size" class="block text-sm font-medium text-gray-700">Size (sqft)</label>
            <input
              type="text"
              name="contact[tags]"
              id="size"
              placeholder="e.g. 2000 sqft"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary"
            >
          </div>

          <div>
            <label for="timeline" class="block text-sm font-medium text-gray-700">Timeline</label>
            <input
              type="text"
              name="contact[timeline]"
              id="timeline"
              placeholder="e.g. 3 Months"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary"
            >
          </div>

          <div>
            <label for="base" class="block text-sm font-medium text-gray-700">Current Base</label>
            <input
              type="text"
              name="contact[base]"
              id="base"
              placeholder="e.g. Concrete"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary"
            >
          </div>

          <div class="md:col-span-2">
            <label for="image" class="block text-sm font-medium text-gray-700">Picture Upload (URL)</label>
            <input
              type="url"
              name="contact[picture_url]"
              id="image"
              placeholder="https://example.com/image.jpg"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-primary focus:border-primary"
            >
          </div>
        </div>

        <div class="mt-6">
          <button
            type="submit"
            class="w-full md:w-auto bg-primary text-white px-6 py-2 rounded-md hover:bg-opacity-90 transition"
          >
            Submit
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>
