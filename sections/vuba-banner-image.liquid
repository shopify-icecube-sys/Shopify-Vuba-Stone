<section class="banner">
  {% if section.settings.background_image != blank %}
    <img
      src="{{ section.settings.background_image | image_url }}"
      class="w-full h-screen object-cover md:block hidden"
      alt="banner desktop"
    >
  {% endif %}
  {% if section.settings.background_image_mobile != blank %}
    <img
      src="{{ section.settings.background_image_mobile | image_url }}"
      class="w-full object-cover md:hidden"
      alt="banner mobile"
    >
  {% endif %}
  <div class="container relative">
    <div
      class="absolute -bottom-32 md:bottom-0 left-4 md:left-16 xl:left-24 3xl:left-28 right-4 md:right-auto text-white px-5 md:px-8 3xl:px-12 py-10 md:py-8 3xl:pt-14 3xl:pb-8 max-w-sm md:max-w-sm 3xl:max-w-[534px] bg-secondary"
      style="background-color: {{ section.settings.div_color | default: '#6c757d' }};"
    >
      <div class="flex items-center mb-8 md:mb-5 2xl:mb-8">
        {% if section.settings.logo_desktop != blank %}
          <img
            src="{{ section.settings.logo_desktop | image_url }}"
            class="mr-2 hidden md:block md:w-56"
            alt="vuba stone brochure download desktop"
          >
       
        {% endif %}
        {% if section.settings.logo_mobile != blank %}
          <img
            src="{{ section.settings.logo_mobile | image_url }}"
            class="mr-2 md:hidden"
            alt="vuba stone brochure download mobile"
          >
      
        {% endif %}
      </div>
      {% if section.settings.title != blank %}
        <h3 class="text-xl md:text-lg 3xl:text-[27px] font-bold mb-2 3xl:mb-3">{{ section.settings.title }}</h3>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="text-sm font-light mb-5 3xl:mb-8">{{ section.settings.description }}</p>
      {% endif %}
      <div class="flex flex-wrap gap-4">
        {% if section.settings.button_text_en != blank and section.settings.button_link_en != blank %}
          <a
            href="{{ section.settings.button_link_en }}"
            class="px-5 md:px-4 3xl:px-9 py-3 md:py-2 3xl:py-3  font-AvenirNext rounded-[10px] tracking-widest text-sm md:text-xs 3xl:text-sm font-bold border-[3px] border-white hover:bg-primary hover:border-primary"
          >
            {{ section.settings.button_text_en }}
          </a>
        {% endif %}
        {% if section.settings.button_text_esp != blank and section.settings.button_link_esp != blank %}
          <a
            href="{{ section.settings.button_link_esp }}"
            class="px-5 md:px-4 3xl:px-9 py-3 md:py-2 3xl:py-3  font-AvenirNext rounded-[10px] tracking-widest text-sm md:text-xs 3xl:text-sm font-bold border-[3px] border-white hover:bg-primary hover:border-primary"
          >
            {{ section.settings.button_text_esp }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vuba Banner Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image (Mobile)"
    },
    {
      "type": "image_picker",
      "id": "logo_desktop",
      "label": "Logo (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "logo_mobile",
      "label": "Logo (Mobile)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "DOWNLOAD OUR BROCHURE"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam."
    },
    {
      "type": "text",
      "id": "button_text_en",
      "label": "Button Text (EN)",
      "default": "DOWNLOAD EN"
    },
    {
      "type": "url",
      "id": "button_link_en",
      "label": "Button Link (EN)"
    },
    {
      "type": "text",
      "id": "button_text_esp",
      "label": "Button Text (ESP)",
      "default": "DOWNLOAD ESP"
    },
    {
      "type": "url",
      "id": "button_link_esp",
      "label": "Button Link (ESP)"
    },
    {
      "type": "color",
      "id": "div_color",
      "label": "Small Div Background Color",
      "default": "#6c757d"
    }
  ],
  "presets": [
    {
      "name": "Vuba Banner Image",
      "category": "Vuba Banner Image"
    }
  ]
}
{% endschema %}
