<section class="banner -mt-20 md:mt-0 relative text-white">
  {% if section.settings.background_image != blank %}
    <img
      src="{{ section.settings.background_image | image_url }}"
      class="w-full h-screen object-cover md:block hidden"
      alt="banner desktop"
    >
  {% endif %}
  {% if section.settings.background_image_mobile != blank %}
    <img
      src="{{ section.settings.background_image_mobile | image_url }}"
      class="w-full object-cover md:hidden"
      alt="banner mobile"
    >
  {% endif %}
  <div class="absolute -bottom-32 md:bottom-0 w-full h-full flex flex-wrap items-end">
    <div class="inner-container relative">
      <div
        class="md:right-auto text-white px-5 md:px-8 3xl:px-12 py-10 md:py-8 3xl:pt-14 3xl:pb-8 max-w-sm md:max-w-sm 3xl:max-w-[534px] bg-secondary"
        style="background-color: {{ section.settings.div_color | default: '#6c757d' }};"
      >
        <div class="flex items-center mb-8 md:mb-5 2xl:mb-8">
          {% if section.settings.logo_desktop != blank %}
            <img
              src="{{ section.settings.logo_desktop | image_url }}"
              class="mr-2 hidden md:block md:w-56"
              alt="vuba stone brochure download desktop"
            >
          {% endif %}
          {% if section.settings.logo_mobile != blank %}
            <img
              src="{{ section.settings.logo_mobile | image_url }}"
              class="mr-2 md:hidden"
              alt="vuba stone brochure download mobile"
            >
          {% endif %}
        </div>
        {% if section.settings.title != blank %}
          <h3 class="text-xl md:text-lg 3xl:text-[27px] font-bold mb-2 3xl:mb-3">
            {{ section.settings.title }}
            {% if section.settings.title2 != blank %}
              <br>
              {{ section.settings.title2 }}
            {% endif %}
          </h3>
        {% endif %}
        {% if section.settings.description != blank %}
          <div class="text-sm font-light mb-5 3xl:mb-8">
            {{ section.settings.description }}
          </div>
        {% endif %}
        <div class="flex flex-wrap gap-4">
          {% if section.settings.button_text_en != blank and section.settings.button_link_en != blank %}
            <a
              href="{{ section.settings.button_link_en }}"
              class="btn btn-outline-white px-4 3xl:px-8 py-2 3xl:py-3 font-AvenirNext text-sm md:text-xs 3xl:text-sm"
            >
              {{ section.settings.button_text_en }}
            </a>
          {% endif %}
          {% if section.settings.button_text_esp != blank and section.settings.button_link_esp != blank %}
            <a
              href="{{ section.settings.button_link_esp }}"
              class="btn btn-outline-white px-4 3xl:px-8 py-2 3xl:py-3 font-AvenirNext text-sm md:text-xs 3xl:text-sm"
            >
              {{ section.settings.button_text_esp }}
            </a>
          {% endif %}
          {% if section.settings.description_about != blank %}
            <div class="text-sm font-light mb-5 3xl:mb-8">
              {{ section.settings.description_about }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

