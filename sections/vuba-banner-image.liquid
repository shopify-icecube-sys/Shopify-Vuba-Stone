<section class="relative">
  {% if section.settings.background_image != blank %}
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('{{ section.settings.background_image | image_url }}');"
    ></div>
  {% endif %}
  <div class="container mx-auto relative z-10 py-12 px-4">
    <div class="bg-maroon-800 p-6 rounded-lg text-white max-w-md">
      {% if section.settings.logo != blank %}
        <img
          src="{{ section.settings.logo | image_url: width: 200 }}"
          alt="{{ section.settings.logo.alt | default: shop.name }}"
          class="h-12 mb-4"
        >
      {% endif %}
      {% if section.settings.title != blank %}
        <h2 class="text-2xl font-bold mb-4">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.richtext != blank %}
        <div class="prose mb-4">{{ section.settings.richtext }}</div>
      {% endif %}
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="inline-block bg-blue-500 text-white py-2 px-4 rounded">
          {{- section.settings.button_text -}}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vuba Banner Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Let us help you Find an Installer"
    },
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Rich Text",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus viverra dolor magna, quis consequat ligula convallis non. Nullam euismod, lorem quis blandit dictum, enim sem consectetur sapien, eget consectetur sapien sapien sit amet sapien.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click here if you would like to become an installer"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Vuba Banner Image",
      "category": "Vuba Banner Image"
    }
  ]
}
{% endschema %}
