<section class="contact-us pt-20">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 gap-y-10 items-center">
      <div class="text-sm 2xl:text-base 3xl:text-xl max-w-3xl">
        {% if section.settings.heading != blank %}
          <h2 class="text-4xl 3xl:text-[51px] font-bold text-primary mb-5 3xl:mb-10 leading-[1.3]">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
        <div class="flex md:block justify-between items-center mt-5">
          <ul class="text-xl 3xl:text-[29px] font-bold md:mb-8 leading-[1.5]">
            {% if section.settings.email != blank %}
              <li>
                <a href="mailto:{{ section.settings.email }}" class="text-primary">{{ section.settings.email }}</a>
              </li>
            {% endif %}
            {% if section.settings.phone != blank %}
              <li>
                <a href="tel:{{ section.settings.phone }}" class="text-primary">{{ section.settings.phone }}</a>
              </li>
            {% endif %}
          </ul>

          <div class="contact-logo">
            <a href="{{ section.settings.logo_link }}" class="inline-block">
              {% if section.settings.desktop_logo != blank %}
                <img
                  src="{{ section.settings.desktop_logo | image_url }}"
                  class="hidden md:block md:w-[130px] 3xl:w-[230px]"
                  alt="Logo Desktop"
                >
              {% endif %}

              {% if section.settings.mobile_logo != blank %}
                <img
                  src="{{ section.settings.mobile_logo | image_url }}"
                  class="md:hidden inline-block w-10"
                  alt="Logo Mobile"
                >
              {% endif %}
            </a>
          </div>
        </div>
      </div>

      <div class="col-right">
        <div class="max-w-3xl mr-0 ml-auto bg-gray rounded-3xl overflow-hidden">
          <div class="bg-primary text-white mb-auto common-form-box">
            <div class="common-form-heading-wrap">
              <h2 class="common-form-title mb-0">Contact Us</h2>
            </div>
            <iframe
              class="w-full min-h-max mb-4"
              id="installer-form-iframe"
              aria-label="Vuba Stone - Find an installer"
              frameborder="0"
              style="min-height: 600px;"
              src="https://forms.zohopublic.eu/vubachemicalinnovationsltd/form/VubaStoneFindaninstaller/formperma/MceOZPMdmIYrcslgwyUJ1cQvRG9I5cPT319eCzZ0gys"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vuba Contact Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact Us Today"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus viverra bibendum augue quis congue. Nullam cursus lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "sales@vuba-stone.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "01482 778897"
    },
    {
      "type": "url",
      "id": "logo_link",
      "label": "Logo Link",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "desktop_logo",
      "label": "Desktop Logo"
    },
    {
      "type": "image_picker",
      "id": "mobile_logo",
      "label": "Mobile Logo"
    },
    {
      "type": "image_picker",
      "id": "contact_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Vuba Contact Us",
      "category": "Contact"
    }
  ]
}
{% endschema %}
