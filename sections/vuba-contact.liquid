<section class="contact-us pt-40 3xl:pt-52">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 gap-y-10 items-center">
      
      <!-- Left Side Content -->
      <div class="text-sm 2xl:text-base 3xl:text-xl max-w-3xl">
        <h2 class="text-4xl 3xl:text-[51px] font-bold text-primary mb-5 3xl:mb-10 leading-[1.3]">
          {{ section.settings.heading }}
        </h2>
        <p>{{ section.settings.description }}</p>
        
        <div class="flex md:block justify-between items-center mt-5">
          <ul class="text-xl 3xl:text-[29px] font-bold md:mb-8 leading-[1.5]">
            <li>
              <a href="mailto:{{ section.settings.email }}" class="text-primary">{{ section.settings.email }}</a>
            </li>
            <li>
              <a href="tel:{{ section.settings.phone }}" class="text-primary">{{ section.settings.phone }}</a>
            </li>
          </ul>

          <div class="contact-logo">
            <a href="{{ section.settings.logo_link }}" class="inline-block">
              <img src="{{ section.settings.desktop_logo | image_url }}" class="hidden md:block md:w-[130px] 3xl:w-[230px]" alt="Logo Desktop">
              <img src="{{ section.settings.mobile_logo | image_url }}" class="md:hidden inline-block w-10" alt="Logo Mobile">
            </a>
          </div>
        </div>
      </div>

      <!-- Right Side Image -->
      <div class="col-right">
        <div class="max-w-3xl mr-0 ml-auto bg-gray rounded-3xl overflow-hidden">
          <img class="w-full" src="{{ section.settings.contact_image | image_url }}" alt="Contact Form">
        </div>
      </div>
      
    </div>
  </div>
</section>

{% schema %}
{
  "name": "vuba Contact Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact Us Today"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus viverra bibendum augue quis congue. Nullam cursus lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "sales@vuba-stone.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "01482 778897"
    },
    {
      "type": "url",
      "id": "logo_link",
      "label": "Logo Link",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "desktop_logo",
      "label": "Desktop Logo",
      "default": "shopify://shop_images/footer-logo-d.svg"
    },
    {
      "type": "image_picker",
      "id": "mobile_logo",
      "label": "Mobile Logo",
      "default": "shopify://shop_images/footer-logo-m.svg"
    },
    {
      "type": "image_picker",
      "id": "contact_image",
      "label": "Right Side Image",
      "default": "shopify://shop_images/contact-form.jpg"
    }
  ],
  "presets": [
    {
      "name": "vuba Contact Us",
      "category": "Contact"
    }
  ]
}
{% endschema %}

