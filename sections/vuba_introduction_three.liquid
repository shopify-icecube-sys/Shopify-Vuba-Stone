<section class="odd-even-sectoin mx-auto pt-[60px] lg:pt-[80px] 2xl:pt-[95px] pb-[60px] lg:pb-[80px] 2xl:pb-[120px] bg-[#fafafa] rounded-3xl">
  <div class="container">
    <div class="flex flex-col gap-y-[40px] xl:gap-y-[60px] 2xl:gap-y-[120px]">
      <div class="flex flex-wrap gap-y-[40px] lg:items-center flex-row-reverse">
        <div class="column w-[100%] md:w-[46%]">
          <div class="md:max-w-[300px] lg:max-w-[400px] xl:max-w-[500px] 2xl:max-w-[599px]">
            {% if section.settings.heading_1 != blank %}
              <h3 class="text-secondary text-[36px] xl:text-3xl 3xl:text-[53px] font-medium font-poppins leading-[40px] 3xl:leading-normal mb-[20px] lg:mb-7 ">
                {{ section.settings.heading_1 }}
              </h3>
            {% endif %}
            {% if section.settings.description_1 != blank %}
              <div class="text-[16px] 2xl:text-[23px] font-poppins ">
                {{ section.settings.description_1 }}
              </div>
            {% endif %}
          </div>
        </div>
        {% if section.settings.video_intro_url != blank %}
          <div class="column w-[100%] md:w-[54%]">
            <figure class="relative w-full pb-[56.25%] rounded-2xl overflow-hidden">
              <iframe
                class="absolute top-0 left-0 w-full h-full"
                src="{{ settings.video_url | replace: 'watch?v=', 'embed/' }}"
                title="Video"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              >
              </iframe>
            </figure>
          </div>
        {% endif %}
      </div>
      <div class="flex flex-wrap gap-y-[40px] lg:items-center">
        <div class="column w-[100%] md:w-[46%]">
          <div class="md:max-w-[300px] lg:max-w-[400px] xl:max-w-[500px] 2xl:max-w-[599px]">
            {% if section.settings.heading_2 != blank %}
              <h3 class="text-secondary text-[36px] xl:text-3xl 3xl:text-[53px] font-medium font-poppins leading-[40px] 3xl:leading-normal mb-[20px] lg:mb-7 ">
                {{ section.settings.heading_2 }}
              </h3>
            {% endif %}
            {% if section.settings.description_2 != blank %}
              <div class="text-[16px] 2xl:text-[23px] font-poppins ">
                {{ section.settings.description_2 }}
              </div>
            {% endif %}
          </div>
        </div>
        <div class="column w-[100%] md:w-[54%]">
          <figure class="relative w-full rounded-2xl overflow-hidden">
            {% if section.settings.image_2 != blank %}
              <img src="{{ section.settings.image_2 | img_url: 'master' }}" class="w-[100%]" alt="Introduction Image">
            {% endif %}
          </figure>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Vuba Introduction Video",
  "settings": [
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading 1"
    },
    {
      "type": "richtext",
      "id": "description_1",
      "label": "Description 1",
      "default": "<p>Description One</p>"
    },
    {
      "type": "url",
      "id": "video_intro_url",
      "label": "Video URL",
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading 2"
    },
    {
      "type": "richtext",
      "id": "description_2",
      "label": "Description 2",
      "default":"<p>Description Two</p>"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    }
  ],
  "presets": [
    {
      "name": "Vuba Introduction Video"
    }
  ]
}
{% endschema %}
