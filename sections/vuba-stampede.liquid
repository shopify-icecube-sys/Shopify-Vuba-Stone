<section class="joint-the-stampede bg-secondary">
  <div class="mx-auto flex flex-wrap justify-center flex-col md:flex-row items-center">
    <div class="relative w-full lg:w-[60%]">
      <img src="{{ section.settings.main_image | image_url }}" class="w-full" alt="Main Image">
    </div>
    <div class="w-full lg:w-[40%] px-4 md:px-8 pb-12 lg:pb-0 -mt-12 lg:mt-0 lg:-left-40 relative">
      <div class="bg-primary text-white py-10 lg:py-14 3xl:py-24 px-4 lg:px-10 3xl:px-20 lg:max-w-[694px] text-sm 3xl:text-base">
        <h2 class="text-4xl 3xl:text-5xl font-bold mb-7">{{ section.settings.heading }}</h2>
        <p>{{ section.settings.description }}</p>
        <div class="flex space-x-5 mt-8 3xl:mt-12">
          {% if section.settings.instagram_link %}
            <a href="{{ section.settings.instagram_link }}"
              ><img src="images/instagram-w-icon.svg" class="h-[22px] 3xl:h-8" alt="Instagram"
            ></a>
          {% endif %}
          {% if section.settings.facebook_link %}
            <a href="{{ section.settings.facebook_link }}"
              ><img src="images/facebook-w-icon.svg" class="h-[22px] 3xl:h-8" alt="Facebook"
            ></a>
          {% endif %}
          {% if section.settings.twitter_link %}
            <a href="{{ section.settings.twitter_link }}"
              ><img src="images/twitter-w-icon.svg" class="h-[22px] 3xl:h-8" alt="Twitter"
            ></a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Join the Stampede",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Stampede!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram Link"
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook Link"
    },
    {
      "type": "url",
      "id": "twitter_link",
      "label": "Twitter Link"
    }
  ],
  "presets": [
    {
      "name": "Join the Stampede",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
