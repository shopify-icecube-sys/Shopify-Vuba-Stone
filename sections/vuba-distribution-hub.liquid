<div
  class="mt-36 md:mt-28 3xl:mt-[134px] distribution-hub py-36 3xl:py-40 relative w-full bg-center bg-cover before:content-[''] before:w-full before:h-full before:top-0 before:left-0 before:absolute before:bg-black before:opacity-50"
  style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');"
>
  <div class="container">
    <div class="relative">
      <div class="md:max-w-2xl text-left text-white text-sm 3xl:text-2xl flex flex-col flex-wrap gap-5 3xl:gap-y-8">
        {% if section.settings.heading != blank %}
          <h2 class="text-2xl xl:text-4xl 3xl:text-[58px] font-medium xl:leading-[1.2] inline-block">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.quote != blank %}
          <blockquote>
            {{ section.settings.quote }}
          </blockquote>
        {% endif %}

        {% if section.settings.author != blank %}
          <p>- {{ section.settings.author }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
    "name": "Vuba Distribution Hub",
    "settings": [
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Distribution hub in <br> The North of the UK"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Experience the magic of Vusion technology!</p>"
        },
        {
            "type": "richtext",
            "id": "quote",
            "label": "Quote",
            "default": "<p>“The best tool for selling a job is to let the customer see what can be done beforehand.”</p>"
        },
        {
            "type": "text",
            "id": "author",
            "label": "Author",
            "default": "George Child, New Look Surfacing"
        }
    ],
    "presets": [
        {
            "name": "Vuba Distribution Hub",
            "category": "Custom Sections"
        }
    ]
}
{% endschema %}
