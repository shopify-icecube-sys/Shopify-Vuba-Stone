<section class="download-vuba-mac-section bg-[#fafafa] pt-[60px] pb-[60px] md:pt-[95px] md:pb-[130px]">
  <div class="inner-container max-w-7xl mx-auto px-4">
    <h3 class="text-secondary text-[24px] md:text-3xl font-medium font-poppins text-center mb-6">
      Download Vuba Mac Resources
    </h3>

    {% for block in section.blocks %}
      <div class="mb-8">
        {% if block.settings.resource_image %}
          <figure class="w-full">
            <img
              src="{{ block.settings.resource_image | image_url }}"
              alt="Vuba Mac Download"
              class="w-full h-auto object-cover"
            >
          </figure>
        {% endif %}

        <div class="mt-4 space-y-4">
          {% for i in (1..3) %}
            <div class="border-[3px] border-secondary px-4 py-3 rounded-lg bg-white flex items-center gap-4">
              <figure>
                <img src="{{ 'doc-icon.svg' | asset_url }}" alt="doc" class="w-10">
              </figure>
              <div>
                <h3 class="font-semibold text-secondary text-lg">
                  {{ block.settings.resource_title }}
                </h3>
                <a href="{{ block.settings.download_link }}" class="text-sm text-blue-600 underline"> Download </a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Download Vuba Mac",
  "settings": [],
  "blocks": [
    {
      "type": "resource",
      "name": "Downloadable Resource",
      "settings": [
        {
          "type": "image_picker",
          "id": "resource_image",
          "label": "Resource Image"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "resource_title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "download_link",
          "label": "Download Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Download Vuba Mac",
      "category": "Custom"
    }
  ]
}
{% endschema %}
