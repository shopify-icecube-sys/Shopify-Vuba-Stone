<section class="download-vuba-mac-section bg-[#fafafa] pt-[60px] pb-[60px] md:pt-[95px] md:pb-[130px]">
  <div class="inner-container max-w-7xl mx-auto px-4">
    <h3 class="text-secondary text-[24px] md:text-3xl font-medium font-poppins text-center mb-6">
      Download Vuba Mac Resources
    </h3>

    <div class="flex flex-col md:grid md:grid-cols-4 gap-6">
      {% for block in section.blocks %}
        <div class="flex flex-col items-center md:block">
          {% if block.settings.resource_image %}
            <figure class="w-full">
              <img
                src="{{ block.settings.resource_image | image_url }}"
                alt="Vuba Mac Download"
                class="w-full h-auto object-cover"
              >
            </figure>
          {% endif %}

          <div class="flex flex-col gap-4 mt-4 md:mt-6">
            {% for i in (1..3) %}
              <div class="border border-[#0073AA] rounded-lg p-4 flex items-center gap-3 w-full max-w-[250px] md:max-w-full">
                <svg
                  class="w-6 h-6 text-[#0073AA]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v12m0 0l-3-3m3 3l3-3m-6 4h6"></path>
                </svg>
                <div>
                  <p class="text-[#0073AA] font-semibold">Heavy Vehicle</p>
                  <a href="#" class="text-[#0073AA] text-sm underline">Download</a>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Download Vuba Mac",
  "settings": [],
  "blocks": [
    {
      "type": "resource",
      "name": "Downloadable Resource",
      "settings": [
        {
          "type": "image_picker",
          "id": "resource_image",
          "label": "Resource Image"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "resource_title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "download_link",
          "label": "Download Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Download Vuba Mac",
      "category": "Custom"
    }
  ]
}
{% endschema %}
