<!-- filepath: sections/vuba-mac.liquid -->
<section class="vuba-mac-2 py-14 md:pt-16 md:pb-24 3xl:pt-24 text-center bg-gray">
  <div class="container">
    <div class="max-w-5xl mx-auto">
      {% if section.settings.heading != blank %}
        <h2 class="text-4xl md:text-4xl 3xl:text-[51px] text-primary font-bold mb-7 md:mb-8 3xl:mb-14">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="text-sm md:text-base 3xl:text-2xl">
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>
    <div class="text-center pt-9 md:pt-12 3xl:pt-20 relative">
      {% if section.settings.image != blank %}
        <img
          class="hidden md:block mx-auto"
          src="{{ section.settings.image | img_url: 'master' }}"
          alt="{{ section.settings.image_alt }}"
        >
      {% endif %}
      <div id="videoContainer" class="relative w-full max-w-lg md:hidden mx-auto cursor-pointer">
        <video id="video" class="w-full" poster="{{ section.settings.video_poster | file_url }}">
          {% if section.settings.video_mp4 != blank %}
            <source src="{{ section.settings.video_mp4 }}" type="video/mp4">
          {% endif %}
          {% if section.settings.video_webm != blank %}
            <source src="{{ section.settings.video_webm | file_url }}" type="video/webm">
          {% endif %}
        </video>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vuba Mac Section Two",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Vuba Mac"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "vuba-mac-2"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster"
    },
    {
      "type": "url",
      "id": "video_mp4",
      "label": "Video MP4 URL"
    },
    {
      "type": "url",
      "id": "video_webm",
      "label": "Video WebM URL"
    }
  ],
  "presets": [
    {
      "name": "Vuba Mac Section Two",
      "category": "Vuba Mac Section Two"
    }
  ]
}
{% endschema %}
