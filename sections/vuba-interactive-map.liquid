<style>
  #map {
      height: 600px;
      width: 100%;
  }
</style>
<section class="interactive-map bg-secondary pb-14 pt-44 md:py-14 3xl:py-24">
  <div class="installer-form padding-right-zeero pb-14 md:py-14 3xl:py-24">
    <div class="inner-container md:max-w-none flex flex-wrap">
      {% if section.settings.left_image != blank %}
        <div class="col-left rounded-3xl overflow-hidden w-full md:w-[50%] bg-white mb-12 md:mb-0">
          <img
            class="w-full"
            src="{{ section.settings.left_image | img_url: 'master' }}"
            alt="Section Image"
          >
        </div>
      {% endif %}
      <div class="col-right w-full md:w-[50%] text-center">
        {% if section.settings.heading != blank %}
          <h2 class="text-white font-bold text-2xl xl:text-3xl mb-8 2xl:mb-10 3xl:mb-20">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        <!-- Map Container -->
        <div id="map" class="mx-auto"></div>
      </div>
    </div>
  </div>
</section>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
<script>
   // initialize the map
    var map = L.map('map').setView([37.652557, -122.285102], 10);
  //initialize other varibles

    // load a tile layer- Make necessary edits to tile size
    L.tileLayer('https://api.mapbox.com/styles/v1/holisticbynature/cipet1e4h0009fmngxfdzksxk/tiles/512/{z}/{x}/{y}?access_token=pk.eyJ1IjoiaG9saXN0aWNieW5hdHVyZSIsImEiOiJjaWYwNDVxZjMwMHFoc2lsdXl5MW9rNXA4In0.JhBLZIdBZ5i8sse_f9K7Hw',
      {
        attribution: "©<a href='https://www.mapbox.com/map-feedback/'>Mapbox</a> ©<a href='http://www.openstreetmap.org/copyright'>OpenStreetMap</a>",
        tileSize: 512,
  	  zoomOffset: -1,
  	  maxZoom: 17,
        minZoom: 1
      }).addTo(map);
</script>

{% schema %}
{
  "name": "Vuba Map",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore our interactive map"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Side Image"
    }
  ],
  "presets": [
    {
      "name": "Vuba Map",
      "category": "Text",
    }
  ]
}
{% endschema %}
