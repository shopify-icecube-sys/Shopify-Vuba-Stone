<style>
  #map {
      height: 300px;
      width: 100%;
  }
</style>
<section class="interactive-map bg-secondary pb-14 pt-44 md:py-14 3xl:py-24">
  <div class="installer-form padding-right-zeero pb-14 md:py-14 3xl:py-24">
    <div class="inner-container md:max-w-none flex flex-wrap items-start">
      <div class="col-left rounded-3xl overflow-hidden w-full md:w-[50%] bg-white px-5 xl:px-7 py-10 3xl:py-16 2xl:px-12 3xl:px-16">
        <h2 class="text-primary font-bold text-2xl xl:text-3xl mb-10 3xl:mb-14 ">Let us help you Find an Installer</h2>
        <form class="space-y-6 text-secondary">
          <div class="grid grid-cols-1 gap-4">
            <div class="input-group">
              <label class="block text-xs font-semibold tracking-widest mb-2 uppercase" for="first-name"
                >Zip code *</label
              >
              <input
                class="w-full h-9 border border-secondary text-black outline-none rounded px-3 py-2"
                required=""
                type="number"
                pattern="[0-9]{5}"
                title="Five digit zip code"
              >
            </div>
          </div>
          <div>
            <button type="submit" class="btn btn-primary py-2 px-5">Send</button>
          </div>
        </form>
      </div>
      <div class="col-right w-full md:w-[50%] text-center pt-10 3xl:pt-16">
        {% if section.settings.heading != blank %}
          <h2 class="text-white font-bold text-2xl xl:text-3xl mb-8 2xl:mb-10 3xl:mb-20">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        <!-- Map Container -->
        <div id="map-container" class="mx-auto hidden">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>
</section>
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css">
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css">
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css">
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
<script>
  var map = L.map('map').setView([20, -75], 1.8);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  // Sample marker data (you can replace this with dynamic Liquid/JS loop)
  var markerData = [
    {
      lat: 40.7128,
      lng: -74.0060,
      name: "John Doe",
      email: "john@example.com",
      contact: "+1 1234567890",
      size: "2000 sqft",
      timeline: "3 Months",
      base: "Concrete",
      image: "https://via.placeholder.com/100"
    },
    {
      lat: 34.0522,
      lng: -118.2437,
      name: "Jane Smith",
      email: "jane@example.com",
      contact: "+1 9876543210",
      size: "150 mÂ²",
      timeline: "6 Weeks",
      base: "Gravel",
      image: "https://via.placeholder.com/100"
    }
  ];

  markerData.forEach(item => {
    var popupContent = `
      <strong>Name:</strong> ${item.name}<br>
      <strong>Email:</strong> ${item.email}<br>
      <strong>Contact:</strong> ${item.contact}<br>
      <strong>Size:</strong> ${item.size}<br>
      <strong>Timeline:</strong> ${item.timeline}<br>
      <strong>Current Base:</strong> ${item.base}<br>
      <strong>Picture:</strong><br><img src="${item.image}" width="100"/>
    `;
    L.marker([item.lat, item.lng]).addTo(map).bindPopup(popupContent);
  });

  // Handle form submission to move map
  document.getElementById("zip-form").addEventListener("submit", function(e) {
    e.preventDefault();
    var zip = document.getElementById("zipcode").value;
    if (zip.trim() === "") return;

    fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${zip}`)
      .then(res => res.json())
      .then(data => {
        if (data.length > 0) {
          var lat = data[0].lat;
          var lon = data[0].lon;
          map.setView([lat, lon], 12);
        } else {
          alert("Location not found!");
        }
      });
  });
</script>

{% schema %}
{
  "name": "Vuba Map",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore our interactive map"
    }
  ],
  "presets": [
    {
      "name": "Vuba Map",
      "category": "Text",
    }
  ]
}
{% endschema %}
