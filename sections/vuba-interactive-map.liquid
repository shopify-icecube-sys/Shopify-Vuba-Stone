<section class="interactive-map bg-secondary pb-14 pt-44 md:py-14 3xl:py-24">
  <div class="installer-form padding-right-zeero pb-14 md:py-14 3xl:py-24">
    <div class="inner-container md:max-w-none flex flex-wrap">
      {% if section.settings.left_image != blank %}
        <div class="col-left rounded-3xl overflow-hidden w-full md:w-[50%] bg-white mb-12 md:mb-0">
          <img
            class="w-full"
            src="{{ section.settings.left_image | img_url: 'master' }}"
            alt="Section Image"
          >
        </div>
      {% endif %}
      <div class="col-right w-full md:w-[50%] text-center">
        {% if section.settings.heading != blank %}
          <h2 class="text-white font-bold text-2xl xl:text-3xl mb-8 2xl:mb-10 3xl:mb-20">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        <!-- Map Container -->
        <div id="map" class="w-full h-[400px] md:h-[500px] rounded-xl overflow-hidden"></div>
      </div>
    </div>
  </div>

  <div class="dealer-list">
    <div class="inner-container">
      <div class="flex justify-between items-center border-b-2 border-white pb-8 lg:px-10 3xl:px-20">
        <button
          onclick="toggleDealerList()"
          class="btn btn-primary hover:bg-white hover:text-secondary hover:border-white"
        >
          {% if section.settings.button_text != blank %}
            {{ section.settings.button_text }}
          {% endif %}
        </button>

        {% if section.settings.button_icon != blank %}
          <img src="{{ section.settings.button_icon | img_url: 'small' }}" alt="down-arrow">
        {% endif %}
      </div>

      <div
        id="dealer-list"
        class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 3xl:gap-x-44 3xl:gap-y-12 hidden text-white lg:px-10 3xl:px-20 pt-10 3xl:py-16"
      >
        {% for block in section.blocks %}
          <div class="text-sm 2xl:text-lg" {{ block.shopify_attributes }}>
            {% if block.settings.country != blank %}
              <h2 class="font-bold text-4xl md:text-3xl mb-2">{{ block.settings.country }}</h2>
            {% endif %}

            {% if block.settings.country != blank %}
              <strong class="inline-block mb-2">{{ block.settings.role }}</strong>
            {% endif %}
            <ul>
              {% if block.settings.company_name != blank %}
                <li>Company name: {{ block.settings.company_name }}</li>
              {% endif %}

              {% if block.settings.contact_name != blank %}
                <li>Contact name: {{ block.settings.contact_name }}</li>
              {% endif %}

              {% if block.settings.phone != blank %}
                <li>
                  Contact number:
                  <a class="hover:text-primary" href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a>
                </li>
              {% endif %}

              {% if block.settings.website != blank %}
                <li>
                  Website:
                  <a
                    class="hover:text-primary"
                    href="{{ block.settings.website }}"
                    target="_blank"
                  >
                    {{- block.settings.website -}}
                  </a>
                </li>
              {% endif %}

              {% if block.settings.email != blank %}
                <li>
                  Email:
                  <a class="hover:text-primary" href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
                </li>
              {% endif %}

              {% if block.settings.instagram != blank %}
                <li>
                  Instagram:
                  <a
                    class="hover:text-primary"
                    href="{{ block.settings.instagram }}"
                    target="_blank"
                  >
                    {{- block.settings.instagram -}}
                  </a>
                </li>
              {% endif %}
            </ul>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
<script>
  // Initialize the map
  var map = L.map('map').setView([20, -75], 3);

  // Add a tile layer to the map
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
  }).addTo(map);

  // Installer data
  var installers = [
      { name: "New York", lat: 40.7128, lng: -74.0060 },
      { name: "SÃ£o Paulo", lat: -23.5505, lng: -46.6333 },
      { name: "Los Angeles", lat: 34.0522, lng: -118.2437 },
      { name: "London", lat: 51.5074, lng: -0.1278 },
      { name: "Paris", lat: 48.8566, lng: 2.3522 },
      { name: "Tokyo", lat: 35.6895, lng: 139.6917 },
      { name: "Moscow", lat: 55.7558, lng: 37.6173 },
      { name: "Sydney", lat: -33.8688, lng: 151.2093 },
      { name: "Mexico City", lat: 19.4326, lng: -99.1332 },
      { name: "Beijing", lat: 39.9042, lng: 116.4074 }
  ];

  // Create a marker cluster group
  var markers = L.markerClusterGroup();

  // Add markers to the cluster group
  installers.forEach(function(installer) {
      var marker = L.marker([installer.lat, installer.lng]);
      marker.bindPopup("<b>" + installer.name + "</b>");
      markers.addLayer(marker);
  });

  // Add the marker cluster group to the map
  map.addLayer(markers);

  // Handle dropdown change
  document.getElementById('locationDropdown').addEventListener('change', function(e) {
      var selected = e.target.value;
      if (selected) {
          var location = installers.find(i => i.name === selected);
          if (location) {
              map.setView([location.lat, location.lng], 10);
          }
      }
  });
</script>

