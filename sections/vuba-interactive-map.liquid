<style>
  #map {
      height: 300px;
      width: 100%;
  }
</style>
<section class="interactive-map bg-secondary pb-14 pt-44 md:py-14 3xl:py-24">
  <div class="installer-form padding-right-zeero pb-14 md:py-14 3xl:py-24">
    <div class="inner-container md:max-w-none flex flex-wrap items-start">
      <div class="col-left rounded-3xl overflow-hidden w-full md:w-[50%] bg-white px-5 xl:px-7 py-10 3xl:py-16 2xl:px-12 3xl:px-16">
        <h2 class="text-primary font-bold text-2xl xl:text-3xl mb-10 3xl:mb-14 ">Let us help you Find an Installer</h2>
        <form class="space-y-6 text-secondary">
          <div class="grid grid-cols-1 gap-4">
            <div class="input-group">
              <label class="block text-xs font-semibold tracking-widest mb-2 uppercase" for="first-name"
                >Zip code *</label
              >
              <input
                class="w-full h-9 border border-secondary text-black outline-none rounded px-3 py-2"
                required=""
                type="number"
                pattern="[0-9]{5}"
                title="Five digit zip code"
              >
            </div>
          </div>
          <div>
            <button type="submit" class="btn btn-primary py-2 px-5">Send</button>
          </div>
        </form>
      </div>
      <div class="col-right w-full md:w-[50%] text-center pt-10 3xl:pt-16">
        {% if section.settings.heading != blank %}
          <h2 class="text-white font-bold text-2xl xl:text-3xl mb-8 2xl:mb-10 3xl:mb-20">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        <!-- Map Container -->
        <div id="map" class="mx-auto"></div>
      </div>
    </div>
  </div>
</section>
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css">
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css">
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css">
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
<script>
  let mapInitialized = false;
  let map;

  // Handle form submission
  document.getElementById("zip-form").addEventListener("submit", function(e) {
    e.preventDefault();
    const zip = document.getElementById("zipcode").value.trim();
    if (zip === "") return;

    fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${zip}`)
      .then(res => res.json())
      .then(data => {
        if (data.length > 0) {
          const lat = data[0].lat;
          const lon = data[0].lon;

          // Show the map container
          document.getElementById("map-container").classList.remove("hidden");

          // Initialize map if not done already
          if (!mapInitialized) {
            map = L.map('map').setView([lat, lon], 12);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
              attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);
            mapInitialized = true;
          } else {
            map.setView([lat, lon], 12);
          }

          // Add marker and popup
          const popupContent = `
            <strong>Name:</strong> John Doe<br>
            <strong>Email:</strong> john@example.com<br>
            <strong>Contact:</strong> +1 1234567890<br>
            <strong>Size:</strong> 2000 sqft<br>
            <strong>Timeline:</strong> 3 Months<br>
            <strong>Current Base:</strong> Concrete<br>
            <strong>Picture:</strong><br><img src="https://via.placeholder.com/100" width="100"/>
          `;
          L.marker([lat, lon]).addTo(map).bindPopup(popupContent).openPopup();
        } else {
          alert("Location not found!");
        }
      });
  });
</script>

{% schema %}
{
  "name": "Vuba Map",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore our interactive map"
    }
  ],
  "presets": [
    {
      "name": "Vuba Map",
      "category": "Text",
    }
  ]
}
{% endschema %}
