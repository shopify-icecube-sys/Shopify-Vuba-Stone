<section class="technial-date-sheet bg-gray-light">
  <div class="container">
    <div class="bg-white rounded-3xl py-5 xl:py-14">
      <div class="inner-container">
        {% if section.settings.heading != blank %}
          <h2 class="text-2xl font-medium mb-6 text-secondary">{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="space-y-4 md:space-y-0 text-sm 2xl:text-base font-medium">
          {% for block in section.blocks %}
            <div
              class="flex flex-wrap gap-3 justify-between items-center border-2 md:border-0 md:border-b-2 border-gray rounded-2xl md:rounded-none px-4 md:px-0 py-6"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.product_name != blank %}
                <strong class="font-medium w-full md:w-auto md:opacity-50">{{ block.settings.product_name }}</strong>
              {% endif %}
              <date class="inline-block text-black opacity-50">{{ block.settings.date }}</date>
              <div class="flex items-center gap-4 w-full md:w-auto">
                <a
                  class="flex items-center gap-4 border-2 md:border-0 rounded-[50px] text-primary px-8 py-3 md:p-0 border-primary uppercase font-bold"
                  href="#"
                >
                  <span class="md:hidden">Download</span>
                  <img
                    class="hidden md:block"
                    src="https://cdn.shopify.com/s/files/1/0628/7520/5734/files/view-icon.svg?v=1743396448"
                    alt="view-icon"
                  >
                  <img
                    class="md:hidden"
                    src="https://cdn.shopify.com/s/files/1/0628/7520/5734/files/cloud-download-icon.svg?v=1743396533"
                    alt="cloud-download-icon"
                  >
                </a>
                <a href="#">
                  <img
                    class="hidden md:block"
                    src="https://cdn.shopify.com/s/files/1/0628/7520/5734/files/cloud-download-icon.svg?v=1743396533"
                    alt="download-icon"
                  >
                  <img
                    class="md:hidden"
                    src="https://cdn.shopify.com/s/files/1/0628/7520/5734/files/view-icon.svg?v=1743396448"
                    alt="eye-icon"
                  >
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="btn-wrap text-center mt-10 md:hidden">
          <a
            class="bg-primary text-white px-8 py-[15px] text-sm font-bold uppercase hover:bg-secondar inline-block rounded-lg"
            href="{{ section.settings.view_more_url }}"
          >
            {{- section.settings.view_more_btn -}}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vuba Technical Data",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Manuals"
    },
    {
      "type": "text",
      "id": "view_more_btn",
      "default": "View More",
      "label": "View More"
    },
    {
      "type": "url",
      "id": "view_more_url",
      "default": "/",
      "label" : "View More Link"
    }
  ],
  "blocks": [
    {
      "type": "data_sheet",
      "name": "Data Sheet",
      "settings": [
        {
          "type": "text",
          "id": "product_name",
          "label": "Product Name",
          "default" : "Technical Data Sheet Product Name"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default" : "12.02.23"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vuba Technical Data",
      "category": "Custom Section",
      "blocks": [
        { "type": "data_sheet" },
        { "type": "data_sheet" },
        { "type": "data_sheet" },
        { "type": "data_sheet" }
      ]
    }
  ]
}
{% endschema %}
