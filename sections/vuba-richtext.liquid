<section
  class="vuba-stone pt-44 md:pt-14 pb-14  3xl:py-32"
>
  <div class="container md:px-24 3xl:px-36">
    <div class="flex-wrap gap-7 md:gap-4 3xl:gap-7 mb-20 md:mb-14 3xl:mb-20 hidden">
      {% if section.settings.button_text != blank %}
        <a
          href="{{ section.settings.button_url }}"
          class="px-10 md:px-6 3xl:px-10 py-[6px] rounded-full text-sm 3xl:text-lg font-medium border-[3px] border-primary text-primary hover:bg-primary hover:text-white"
        >
          {{- section.settings.button_text -}}
        </a>
      {% endif %}
      {% if section.settings.button_text_two != blank %}
        <a
          href="{{ section.settings.button_two_url }}"
          class="px-10 md:px-6 3xl:px-10 py-[6px] rounded-full text-sm 3xl:text-lg font-medium border-[3px] border-primary text-primary hover:bg-primary hover:text-white"
        >
          {{- section.settings.button_text_two -}}
        </a>
      {% endif %}
    </div>
    <div class="text-center">
      <h2
        class="text-primary text-4xl lg:text-4xl 3xl:text-[51px] font-bold mb-5 3xl:mb-20 text-primary"
      >
        {{ section.settings.title }}
      </h2>
      <div class="text-sm md:text-base 3xl:text-2xl">
        {{ section.settings.richtext }}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Vuba Rich Text Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Rich Text Title"
    },
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Rich Text",
      "default": "<p>This is some rich text content.</p>"
    }
  ],
  "presets": [
    {
      "name": "Vuba Rich Text Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
