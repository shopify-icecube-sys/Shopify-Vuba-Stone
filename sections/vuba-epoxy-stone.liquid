      },
      {
        "type": "text",
        "id": "vuba_title",
        "label": "Vuba Title",
        "default": "Vuba Stone pros"
      },
      {
        "type": "richtext",
        "id": "vuba_description",
        "label": "Vuba Description",
        "default": "<p>Can Vuba Stone be installed in cold and hot climates? We would like to show we offer a 5-year warranty on Vuba Stone and 10 years on VubaMac</p>"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "GO TO INSTALLER"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
  {
    "name": "Vuba Stone",
    "category": "Custom"
  }
]
