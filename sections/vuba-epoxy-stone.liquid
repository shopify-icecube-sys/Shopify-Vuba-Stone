<!-- filepath: sections/epoxy-vuba-stone.liquid -->
<section class="epoxy-vuba-stone">
    <div class="container mx-auto text-center max-w-5xl">
        <h2 class="text-3xl font-bold mb-10">
            <span class="text-black">{{ section.settings.title_part1 }}</span> vs <span class="text-black font-extrabold">{{ section.settings.title_part2 }}</span>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <!-- Epoxy Cons -->
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <div class="relative">
                    <img src="{{ section.settings.epoxy_image }}" class="w-full rounded-lg" alt="{{ section.settings.epoxy_image_alt }}">
                    <img src="{{ section.settings.epoxy_icon }}" class="absolute bottom-0 right-0 transform translate-x-1/3 translate-y-1/3 w-28 h-28 rounded-full border-4 border-white shadow-lg" alt="{{ section.settings.epoxy_icon_alt }}">
                </div>
                <h3 class="text-xl font-bold mt-6">{{ section.settings.epoxy_title }}</h3>
                <p class="text-gray-600 mt-2 text-sm text-left">
                    {{ section.settings.epoxy_description }}
                </p>
            </div>
            
            <!-- Vuba Stone Pros -->
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <div class="relative">
                    <img src="{{ section.settings.vuba_image }}" class="w-full rounded-lg" alt="{{ section.settings.vuba_image_alt }}">
                    <img src="{{ section.settings.vuba_icon }}" class="absolute bottom-0 right-0 transform translate-x-1/3 translate-y-1/3 w-28 h-28 rounded-full border-4 border-white shadow-lg" alt="{{ section.settings.vuba_icon_alt }}">
                </div>
                <h3 class="text-xl font-bold mt-6">{{ section.settings.vuba_title }}</h3>
                <p class="text-gray-600 mt-2 text-sm text-left">
                    {{ section.settings.vuba_description }}
                </p>
            </div>
        </div>
        
        <div class="mt-10">
            <a href="{{ section.settings.button_link }}" class="bg-[#7b1720] text-white px-6 py-3 rounded-lg text-sm font-semibold tracking-wide inline-block hover:bg-red-900">
                {{ section.settings.button_text }}
            </a>
        </div>
    </div>
</section>
