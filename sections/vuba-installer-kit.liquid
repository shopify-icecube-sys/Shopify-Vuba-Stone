<section class="installer-kit md:pb-20 3xl:pb-36">
  <div class="container">
    <div class="flex flex-col md:flex-row relative gap-3 md:gap-2">
      <div class="bg-primary text-white md:w-[60%] lg:w-[70%] 2xl:w-[75%] md:text-center px-5 md:px-8 py-14 3xl:py-36 rounded-3xl md:rounded-none">
        <h2 class="text-4xl md:text-2xl 3xl:text-5xl font-bold mb-5 3xl:mb-14 relative z-10">
          {{ section.settings.process_heading }}
        </h2>
        <ol class="list-none text-sm 2xl:text-base 3xl:text-2xl space-y-2 relative z-10">
          {% for block in section.blocks %}
            {% if block.type == 'process_step' %}
              <li>{{ forloop.index }}. {{ block.settings.step_text }}</li>
            {% endif %}
          {% endfor %}
        </ol>
      </div>

      <div class="bg-secondary text-white md:w-[40%] lg:w-[30%] 2xl:w-[25%] md:text-center p-5 pt-20 md:pt-14 pr-[20vw] md:px-8 3xl:py-36 rounded-3xl md:rounded-none relative">
        <h2 class="text-4xl md:text-2xl 3xl:text-5xl font-bold mb-5 3xl:mb-14 relative z-10">
          {{ section.settings.installer_kit_heading }}
        </h2>
        <ul class="list-none text-sm 2xl:text-base 3xl:text-2xl space-y-2 relative z-10">
          {% for block in section.blocks %}
            {% if block.type == 'kit_item' %}
              <li>{{ block.settings.kit_text }}</li>
            {% endif %}
          {% endfor %}
        </ul>

        {% if section.settings.installer_image != blank %}
          <img
            src="{{ section.settings.installer_image | image_url }}"
            alt="Worker"
            class="
              absolute bottom-6 md:-bottom-10 3xl:-bottom-[70px]
              -right-[15px] md:right-auto md:-left-20 lg:-left-[70px]
              2xl:-left-[75px] 3xl:-left-32 w-[175px] md:w-[150px]
              lg:w-[130px] 2xl:w-[140px] 3xl:w-[245px]
            "
          >
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vuba Installer Kit",
  "settings": [
    {
      "type": "text",
      "id": "process_heading",
      "label": "Process Heading",
      "default": "What's the process"
    },
    {
      "type": "text",
      "id": "installer_kit_heading",
      "label": "Installer Kit Heading",
      "default": "Installer Kit"
    },
    {
      "type": "image_picker",
      "id": "installer_image",
      "label": "Installer Image"
    }
  ],
  "blocks": [
    {
      "type": "process_step",
      "name": "Process Step",
      "settings": [
        {
          "type": "text",
          "id": "step_text",
          "label": "Step Text",
          "default": "Attend our 2-day Training Course"
        }
      ]
    },
    {
      "type": "kit_item",
      "name": "Installer Kit Item",
      "settings": [
        {
          "type": "text",
          "id": "kit_text",
          "label": "Item Text",
          "default": "Forced action mixer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vuba Installer Kit",
      "blocks": [
        { "type": "process_step", "settings": { "step_text": "Attend our 2-day Training Course" } },
        { "type": "process_step", "settings": { "step_text": "Sign on to become a certified Vuba Stone installer" } },
        { "type": "process_step", "settings": { "step_text": "Purchase our ‘Installer Kit’" } },
        { "type": "kit_item", "settings": { "kit_text": "Forced action mixer" } },
        { "type": "kit_item", "settings": { "kit_text": "Sample case" } }
      ]
    }
  ]
}
{% endschema %}
