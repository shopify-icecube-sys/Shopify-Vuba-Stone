<section class="py-12">
    <div class="container mx-auto">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold">{{ section.settings.section_heading }}</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
        {% for block in section.blocks %}
          <div class="installer-block bg-white p-4 rounded-lg shadow-md text-center">
            {% if block.settings.image != blank %}
              <div class="mb-4">
                <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title }}" class="w-full h-auto rounded-t-lg">
              </div>
            {% endif %}
  
            <div>
              {% if block.settings.title != blank %}
                <h3 class="text-xl font-semibold mb-4">{{ block.settings.title }}</h3>
              {% endif %}
  
              {% if block.settings.description != blank %}
                <p class="mb-4">{{ block.settings.description }}</p>
              {% endif %}
  
              {% if block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="inline-block px-6 py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Vuba Installers",
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Section Heading",
        "default": "Vuba Installer Text here"
      }
    ],
    "blocks": [
      {
        "type": "installer_block",
        "name": "Installer Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Installer"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Approved installers are loyal Vuba customers."
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Learn more"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vuba Installers",
        "category": "Vuba Installers"
      }
    ]
  }
  {% endschema %}