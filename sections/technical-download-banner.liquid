<section class="techninal-download mt-[150px] bg-gray-light">
  <div class="container">
    <div class="bg-secondary rounded-3xl py-14 3xl:py-16 px-5 relative z-10">
      <div class="max-w-2xl mx-auto text-white text-sm 2xl:text-base text-center">
        <img
          src="{{ block.settings.desktop_image | img_url: 'large' }}"
          class="mx-auto hidden md:block w-56 3xl:w-96"
          alt="{{ block.settings.pdf_title }} desktop"
        >
        <img
          src="{{ block.settings.mobile_image | img_url: 'large' }}"
          class="mx-auto md:hidden w-56"
          alt="{{ block.settings.pdf_title }} mobile"
        >
        <h2 class="text-4xl 3xl:text-[51px] font-bold my-7 3xl:mt-12 3xl:mb-20">Technical Downloads</h2>
        <p>
          This page would have a big list of all the PDFs we have, including data sheets, application guides, warranty
          documents, etc. We want this to look simple while condensing all the information.
        </p>
        <div class="pdf-links mt-8">
          {% for block in section.blocks %}
            <a href="{{ block.settings.pdf_link }}" class="text-white underline block mb-2" target="_blank">
              {{- block.settings.pdf_title -}}
            </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Technical Downloads",
  "settings": [],
  "blocks": [
    {
      "type": "pdf",
      "name": "PDF Document",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "pdf_title",
          "label": "PDF Title"
        },
        {
          "type": "url",
          "id": "pdf_link",
          "label": "PDF Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Technical Downloads",
      "blocks": []
    }
  ]
}
{% endschema %}
