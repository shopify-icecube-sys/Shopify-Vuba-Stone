<header class="bg-maroon-800 p-4 flex justify-between items-center">
  <div class="logo">
    <a href="{{ routes.root_url }}">
      {% if settings.logo != blank %}
        <img
          src="{{ settings.logo | image_url: width: 200 }}"
          alt="{{ settings.logo.alt | default: shop.name }}"
          class="h-12"
        >
      {% else %}
        <span class="text-white text-xl font-bold">{{ shop.name }}</span>
      {% endif %}
    </a>
  </div>

  <div class="search flex items-center">
    <input type="text" placeholder="Search..." class="p-2 rounded-l-md border-none">
    <button type="submit" class="bg-white p-2 rounded-r-md">
      <svg class="w-4 h-4 text-maroon-800" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M12.9 14.32a8 8 0 111.414-1.414l4.387 4.387a1 1 0 01-1.414 1.414l-4.387-4.387zM8 14a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd"></path>
      </svg>
    </button>
  </div>

  <nav>
    <ul class="flex space-x-4">
      {% for link in linklists[settings.menu].links %}
        <li>
          <a href="{{ link.url }}" class="text-white font-bold">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ],
  "presets": [
    {
      "name": "Vuba Header"
    }
  ]
}
{% endschema %}
