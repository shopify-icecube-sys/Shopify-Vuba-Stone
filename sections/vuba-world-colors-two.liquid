<section class="vuba-color-top text-center text-sm md:text-base pt-40 3xl:pt-52 mb-14 3xl:pb-10">
  <div class="inner-container">
    <div class="max-block 3xl:max-w-[1140px] max-w-[774px] mx-auto">
      <div class="text-box px-3 font-poppins">
        {% if section.settings.heading != blank %}
          <h2 class="text-primary md:text-secondary text-4xl lg:text-4xl 3xl:text-[51px] font-bold mb-5 3xl:mb-8">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="text-sm md:text-base 3xl:text-2xl">
            <p>{{ section.settings.description }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
    "name": "Vuba World Colors Two",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Vuba World Colors"
        },
        {
            "type": "richtext",
