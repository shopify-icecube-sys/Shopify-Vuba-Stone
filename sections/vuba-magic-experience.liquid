<section class="hero-slide-section py-14 3xl:py-24">
  <div class="inner-container">
    <div class="heading-wrap mb-10 3xl:mb-16">
      <h2 class="text-center text-secondary text-2xl xl:text-4xl 3xl:text-[44px] xl:leading-[1.2] font-medium">
        {% if section.settings.title != blank %}
          {{ section.settings.title }}
        {% endif %}
      </h2>
    </div>
  </div>
  <div id="magic-slider" class="owl-carousel owl-theme">
    {% for block in section.blocks %}
      <div class="item" {{ block.shopify_attributes }}>
        <figure class="rounded-[20px] overflow-hidden">
          <img
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="{{ block.settings.alt_text }}"
            class="object-cover w-full h-full aspect-[2/1.1]"
          >
        </figure>
      </div>
    {% endfor %}
  </div>
</section>
{% schema %}
{
  "name": "Vuba Hero Slider",
  "settings": [
    {
    "type": "text",
    "id": "title",
    "label": "Title",
    "default": "Experience the magic of Vusion technology!"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
         "default": "Vuba Magic Experience"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vuba Hero Slider",
      "category": "Hero",
        "blocks": [
        {
          "type": "slide",
          "settings": {
            "image": "shopify://shop_images/placeholder-image.jpg",
            "alt_text": "Default Vuba Magic Slide"
          }
        }
      ]
    }
  ]
}
{% endschema %}
