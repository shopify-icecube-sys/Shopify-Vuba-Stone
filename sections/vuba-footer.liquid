<!-------- Start of footer ---------->
<footer class="bg-gray-800 pt-24 pb-14 text-center md:text-start text-white">
  <div class="container mx-auto">
    <div class="flex flex-wrap justify-between gap-8 lg:gap-6">
      <div class="col w-full 2xl:w-auto">
        <a href="#" class="inline-block mb-5">
          <img src="{{ 'footer-logo-d.svg' | asset_url }}" class="hidden md:block" alt="Vuba Stone Logo Desktop"/>
          <img src="{{ 'footer-logo-m.svg' | asset_url }}" class="md:hidden" alt="Vuba Stone Logo Mobile"/>
        </a>
      </div>
      <div class="col w-full md:w-[45%] lg:w-auto">
        <h3 class="text-2xl font-semibold mb-5">Site map</h3>
        <ul class="space-y-3 text-base">
            {%- for link in section.settings.menu.links -%}
            <li>
                {%- if link != blank -%}    
            <a href="{{ link.url }}" class="hover:text-primary">{{ link.title }}</a>
        {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="col w-full md:w-[45%] lg:w-auto">
        <h3 class="text-2xl font-semibold mb-5">Distributor HQ</h3>
        <p class="text-base leading-7">
          Distributor HQ<br> 
          Sierra Stone / Rubber Stone <br>
          E.W. Industries Ltd.<br>
          P.O Box 336 <br>
          Imperial, Saskatchewan S0G 2J0 <br>
          <a href="tel:1-888-799-3960" class="text-primary underline">1-888-799-3960</a>
        </p>
      </div>
      <div class="col w-full md:w-[45%] lg:w-auto">
        <h3 class="text-2xl font-semibold mb-5">UK Manufacturer</h3>
        <p class="text-base leading-7">
          Vuba Chemical Innovations Ltd <br>
          Units B2-B4, Grovehill Industrial Estate <br>
          Annie Reed Road, Beverley <br>
          HU17 0LE <br>
          <a href="mailto:sales@vubagroup.com" class="underline text-primary">sales@vubagroup.com</a><br>
          <a href="tel:01482-778897" class="underline text-primary">01482 778897</a>
        </p>
      </div>
      <div class="col w-full md:w-[45%] lg:w-auto">
        <h3 class="text-2xl font-semibold mb-5">Let’s stay connected</h3>
        <div class="flex justify-center md:justify-normal space-x-8 mb-6">
          <a href="#"><img class="h-[23px]" src="{{ 'instagram-icon.svg' | asset_url }}" alt="instagram-icon"/></a>
          <a href="#"><img class="h-[23px]" src="{{ 'facebook-icon.svg' | asset_url }}" alt="facebook-icon"/></a>
          <a href="#"><img class="h-[23px]" src="{{ 'twitter-icon.svg' | asset_url }}" alt="twitter-icon"/></a>
        </div>
        <label for="email" class="block text-base">Email</label>
        <input type="email" id="email" class="w-full my-3 border rounded-xl p-2 text-sm h-12">
        <a class="mt-2 text-white px-14 py-3 inline-block rounded-full text-base bg-primary">Sign up</a>
      </div>
    </div>
    <div class="pt-10 md:hidden">
      <ul class="space-y-2 text-base mb-5">
        <li><a href="#" class="hover:text-primary text-xs">Privacy Policy</a></li>
        <li><a href="#" class="hover:text-primary text-xs">Cookie preferences</a></li>
        <li><a href="#" class="hover:text-primary text-xs">Terms & conditions</a></li>
      </ul>
      <p class="text-[10px]">2025® Vuba Stone All rights reserved</p>
    </div>
  </div>
</footer>
<!--------- End of footer --------->

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Vuba Menu",
      "default": "footer-menu"
    }
  ],
  "presets": [
    {
      "name": "Vuba Footer"
    }
  ]
}
{% endschema %}