{% comment %}
  Dynamic Project Filters - Shopify Section
  - Allows users to select a collection dynamically from the Shopify Admin.
  - Displays products from the selected collection.
  - Debugging messages included if no products are found.
{% endcomment %}

<section class="project-filters">
  {% assign collection = section.settings.collection %}

  {% if collection != blank and collection.products.size > 0 %}
    <h2>{{ collection.title }}</h2>
    <div class="product-grid">
      {% for product in collection.products %}
        <div class="product-item">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
          <a href="{{ product.url }}">View product</a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No products found in the selected collection.</p>
  {% endif %}
</section>

<style>
  .product-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }
  .product-item {
    width: 200px;
    text-align: center;
  }
  .product-item img {
    width: 100%;
    height: auto;
    border-radius: 5px;
  }
</style>

{% schema %}
{
  "name": "Dynamic Project Filters",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Choose Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 10,
      "label": "Number of Products to Show"
    }
  ],
  "presets": [
    {
      "name": "Dynamic Project Filters",
      "category": "Custom"
    }
  ]
}
{% endschema %}
