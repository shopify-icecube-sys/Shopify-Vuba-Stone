{% comment %}
  Dynamic Project Filters - Shopify Section with Filtering
  - Allows users to filter products dynamically.
  - Uses metaobjects for filter options.
  - Debugging messages included for missing products or filters.
{% endcomment %}

<section class="project-filters">
  {% assign collection = section.settings.collection %}
  {% assign selected_filter = section.settings.filter_tag %}

  <div class="filter-options">
    <label for="filter-dropdown">Filter by:</label>
    <select id="filter-dropdown">
      <option value="all">All</option>
      {% for tag in collection.all_tags %}
        <option
          value="{{ tag }}"
          {% if selected_filter == tag %}
            selected
          {% endif %}
        >
          {{ tag }}
        </option>
      {% endfor %}
    </select>
  </div>

  <div class="product-grid">
    {% if collection != blank and collection.products.size > 0 %}
      {% for product in collection.products %}
        {% if selected_filter == 'all' or product.tags contains selected_filter %}
          <div class="product-item" data-tags="{{ product.tags | join: ',' }}">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
            <a href="{{ product.url }}">View product</a>
          </div>
        {% endif %}
      {% endfor %}
    {% else %}
      <p>No products found in the selected collection.</p>
    {% endif %}
  </div>
</section>

<style>
  .filter-options {
    margin-bottom: 15px;
  }
  .product-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }
  .product-item {
    width: 200px;
    text-align: center;
  }
  .product-item img {
    width: 100%;
    height: auto;
    border-radius: 5px;
  }
</style>

<script>
  document.getElementById('filter-dropdown').addEventListener('change', function() {
    var selectedTag = this.value;
    var products = document.querySelectorAll('.product-item');

    products.forEach(function(product) {
      var tags = product.getAttribute('data-tags').split(',');
      if (selectedTag === 'all' || tags.includes(selectedTag)) {
        product.style.display = 'block';
      } else {
        product.style.display = 'none';
      }
    });
  });
</script>

{% schema %}
{
  "name": "Dynamic Project Filters",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Choose Collection"
    },
    {
      "type": "text",
      "id": "filter_tag",
      "label": "Default Filter Tag",
      "default": "all"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 10,
      "label": "Number of Products to Show"
    }
  ],
  "presets": [
    {
      "name": "Dynamic Project Filters",
      "category": "Custom"
    }
  ]
}
{% endschema %}
