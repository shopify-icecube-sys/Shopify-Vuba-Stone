{% schema %}
{
  "name": "Dynamic Project Filters",
  "settings": [
    {
      "type": "metaobject",
      "id": "project_filters",
      "label": "Select Filter Set",
      "metaobject_type": "project_filters"
    },
    {
      "type": "collection",
      "id": "selected_collection",
      "label": "Choose Collection",
      "info": "Select the collection of projects to display."
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products to Show",
      "min": 3,
      "max": 20,
      "step": 1,
      "default": 9
    },
    {
      "type": "checkbox",
      "id": "enable_filters",
      "label": "Enable Filters",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Dynamic Filters with Products",
      "settings": {
        "enable_filters": true,
        "product_limit": 9
      }
    }
  ]
}
{% endschema %}
