<section
  class="py-14 2xl:py-20 3xl:py-40 relative w-full bg-center bg-fixed bg-cover before:content-[''] before:w-full before:h-full before:top-0 before:left-0 before:absolute before:bg-black before:opacity-50"
  {% if section.settings.background_image != blank %}
    style="background-image: url({{ section.settings.background_image | image_url }});"
  {% endif %}
>
  <div class="inner-container relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-[40px] xl:gap-[80px]">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="bg-white px-[20px] md:px-[30px] xl:px-[50px] py-[60px] md:py-[30px] xl:py-[45px] 3xl:px-[70px] 3xl:py-[55px] rounded-[20px]">
            <figure class="rounded-lg overflow-hidden">
              <img
                src="{{ block.settings.image | image_url }}"
                alt="Vuba Technology Images"
                class="w-full h-auto object-cover pe-9"
              >
            </figure>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Vuba Technology Forms",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vuba Technology Forms",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        }
      ]
    }
  ]
}
{% endschema %}
