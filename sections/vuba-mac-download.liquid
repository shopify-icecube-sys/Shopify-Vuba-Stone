<section class="download-vuba-mac-section bg-[#fafafa] pt-[60px] 3xl:pt-[95px] pb-[60px] 3xl:pb-[130px]">
  <div class="inner-container">
    {% if section.settings.section_title != blank %}
      <h3 class="text-secondary text-[36px] xl:text-3xl 3xl:text-[53px] font-medium font-poppins leading-[40px] 3xl:leading-normal mb-[20px] md:mb-[24px] text-center">
        {{ section.settings.section_title }}
      </h3>
    {% endif %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-[40px]  xl:gap-[20px] 2xl:gap-[30px] 3xl:gap-[50px]">
      <div class="column">
        {% render 'vuba-mac-download-resources' %}
      </div>

      <div class="column">
        {% render 'vuba-mac-download-resources' %}
      </div>

      <div class="column">
        {% render 'vuba-mac-download-resources' %}
      </div>

      <div class="column">
        {% render 'vuba-mac-download-resources' %}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Vuba Download Mac",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Download Vuba Mac Resources"
    },
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Section Image"
    }
  ],
  "blocks": [
  {
    "type": "download_item",
    "name": "Download Item 1",
    "settings": [
      {
        "type": "image_picker",
        "id": "icon",
        "label": "Icon"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Heavy Vehicle"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Download Link"
      }
    ]
  }
],
  "presets": [
    {
      "name": "Vuba Download Mac",
      "category": "Vuba Mac"
    }
  ]
}
{% endschema %}
