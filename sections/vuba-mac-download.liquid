<section class="download-vuba-mac-section bg-[#fafafa] pt-[60px] 3xl:pt-[95px] pb-[60px] 3xl:pb-[130px]">
  <div class="inner-container">
    {% if section.settings.section_title != blank %}
      <h3 class="text-secondary text-[36px] xl:text-3xl 3xl:text-[53px] font-medium font-poppins leading-[40px] 3xl:leading-normal mb-[20px] md:mb-[24px] text-center">
        {{ section.settings.section_title }}
      </h3>
    {% endif %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-[40px] xl:gap-[20px] 2xl:gap-[30px] 3xl:gap-[50px]">
      {% for block in section.blocks %}
        <div class="column" id="column-{{ block.id }}">
          <div class="inner-block">
            {% if block.settings.column_image != blank %}
              <figure class="mb-[20px] md:mb-[45px] 3xl:mb-[75px]">
                <img
                  src="{{ block.settings.column_image | img_url: 'master' }}"
                  alt="{{ block.settings.column_image_alt }}"
                  class="aspect-[1/1]"
                >
              </figure>
            {% endif %}
            <div class="download-block flex flex-col gap-[13px]" id="download-block-{{ block.id }}">
              {% for item in block.settings.download_items %}
                <div
                  class="box-block border-[3px] border-secondary px-[30px] py-[25px] md:px-[20px] md:py-[18px] 3xl:px-[26px] 3xl:py-[23px] rounded-[19px] bg-white flex items-center gap-[20px] 3xl:gap-[30px]"
                  id="box-block-{{ block.id }}-{{ forloop.index }}"
                >
                  <figure>
                    <img
                      src="{{ item.icon | img_url: 'master' }}"
                      alt="{{ item.icon_alt }}"
                      class="max-w-[41px] 3xl:max-w-[50px]"
                    >
                  </figure>
                  <div class="content">
                    <h3 class="font-medium lg:font-semibold font-poppins text-[18px] text-secondary block">
                      {{ item.title }}
                    </h3>
                    <a href="{{ item.link }}" class="font-medium underline mt-4 3xl:mt-[24px] font-poppins text-[12px]">
                      Download
                    </a>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
"name": "Vuba Download Mac",
  "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Download Vuba Mac Resources"
      },
      {
        "type": "image_picker",
        "id": "section_image_1",
        "label": "Section Image"
      },
      {
        "type": "image_picker",
        "id": "section_image_2",
        "label": "Section Image"
      },
      {
        "type": "image_picker",
        "id": "section_image_3",
        "label": "Section Image"
      },
      {
        "type": "image_picker",
        "id": "section_image_4",
        "label": "Section Image"
      }
  ],
"blocks": [
      {
        "type": "download_item",
        "name": "Download Item 1",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Heavy Vehicle"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Download Link"
          }
      ]
    }
],
"presets": [
  {
    "name": "Vuba Download Mac",
    "category": "Vuba Mac"
  }
]
}
{% endschema %}
