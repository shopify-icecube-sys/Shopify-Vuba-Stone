<section class="download-vuba-mac-section bg-[#fafafa] pt-[60px] 3xl:pt-[95px] pb-[60px] 3xl:pb-[130px]">
  <div class="inner-container">
    {% if section.settings.section_title != blank %}
      <h3 class="text-secondary text-4xl 3xl:text-[53px] font-medium leading-[1.2] text-center mb-10">
        {{ section.settings.section_title }}
      </h3>
    {% endif %}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-10 md:gap-5 3xl:gap-10">
      {% assign columns = 'A,B,C,D' | split: ',' %}
      {% for col in columns %}
        <div class="column">
          <div class="inner-block">
            {% assign image_var = 'section_image_' | append: forloop.index %}
            {% if section.settings[image_var] != blank %}
              <figure class="mb-[20px] md:mb-[45px] 3xl:mb-[75px]">
                <img
                  src="{{ section.settings[image_var] | img_url:'master' }}"
                  alt="Vuba Mac Download"
                  class="aspect-[1/1]"
                >
              </figure>
            {% else %}
              {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
            {% endif %}
            <div class="download-block flex flex-col gap-[13px]">
              {% for block in section.blocks %}
                {% if block.settings.column_id == col %}
                  <div
                    class="box-block border-[3px] border-secondary px-[30px] py-[25px] md:px-[20px] md:py-[18px] 3xl:px-[26px] 3xl:py-[23px] rounded-[19px] bg-white flex items-center gap-[20px] 3xl:gap-[30px]"
                    {{ block.shopify_attributes }}
                  >
                    <figure>
                      <img
                        src="{{ block.settings.icon | img_url: 'master' }}"
                        alt="{{ block.settings.icon_alt }}"
                        class="max-w-[41px] 3xl:max-w-[50px]"
                      >
                    </figure>
                    <div class="content">
                      <h3 class="font-medium lg:font-semibold font-poppins text-[18px] text-secondary block">
                        {{ block.settings.title }}
                      </h3>
                      <a
                        href="{{ block.settings.link }}"
                        class="font-medium underline mt-4 3xl:mt-[24px] font-poppins text-[12px]"
                      >
                        Download
                      </a>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Vuba Download Mac",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Download Vuba Mac Resources"
    },
    {
      "type": "image_picker",
      "id": "section_image_1",
      "label": "Section Image"
    },
    {
      "type": "image_picker",
      "id": "section_image_2",
      "label": "Section Image"
    },
    {
      "type": "image_picker",
      "id": "section_image_3",
      "label": "Section Image"
    },
    {
      "type": "image_picker",
      "id": "section_image_4",
      "label": "Section Image"
    }
  ],
  "blocks": [
    {
      "type": "download_item",
      "name": "Download Item 1",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Heavy Vehicle"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Download Link"
        },
        {
          "type": "select",
          "id": "column_id",
          "label": "Select Column",
          "options": [
            { "value": "A", "label": "Column A" },
            { "value": "B", "label": "Column B" },
            { "value": "C", "label": "Column C" },
            { "value": "D", "label": "Column D" }
          ],
          "default": "A"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vuba Download Mac",
      "category": "Vuba Mac"
    }
  ]
}
{% endschema %}
